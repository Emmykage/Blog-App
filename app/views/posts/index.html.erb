
<section class="container">
  <div class='sub_container'>
    <div class="user_container">
      <div class='img-div'>
      <img alt='image' src='<%=@user.photo%>' class='image'/>
      </div>
      <div class='user-info'>
        <span><%= link_to @user.name, @user, class: 'user' %></span>
        <span>Number of posts: <%= @user.posts_counter%></span>
      </div>
    </div>
</section>

<div class='create_button_container'>
  <%=link_to 'Add Post', new_user_post_url(@user.id), class: 'button' %>
</div>

<section>
  <% if @posts.empty? %>
    <h1>Posts</h1>
    <h4>No post</h4>
  <% else %>
  <% @posts.includes([:comments]).each do |post| %>
  <section class='posts_container'>
    <h1>Posts</h1>
    <div class='user_card'>
      <div>
        <%= link_to post.title, user_post_url(@user.id, post.id)%>
        <p maxlength= 150><%= post.text %></p>
      </div>
      <div class='counters'>
        <p>Comments: <%=post.comments_counter%><br></p>
        <p>Likes: <%=post.likes_counter%><br></p>
      </div>
    <% if post.comments.empty? %>
    <h5>No comments</h5>
    <% else %>
      <% @posts.includes([:author]).each do |comment| %>
        <p><%=comment.author.name%>:</p>
        <p><%=comment.text %></p>
      <% end %>
    <% end %>
    </div>
  </section>
  <% end %>
  <% end %>
</section>


