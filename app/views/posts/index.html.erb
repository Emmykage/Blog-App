<%
=begin%>
 <p>Here is a list of post for user <%= @user %></p> 
<%
=end%>

<section class="container">

    <div class='top-info flex'>
        <div class='img-div'>
            <img src=<%= @user.photo %>>
        </div>
        <div class='details'>
            <span class="username"><%= @user.name %></span>
            <span class="info">Number of post: <%= @user.posts_counter %></span>
        </div>
    </div>
    <div class="post-container">
        <div class-det>
            <% @posts.each do |post| %>
                
                    <div class="post-div">
                      
                      <%= link_to user_post_path(@user.id, post.id) do %>
                        <span> <%= post.title %> </span>
                        <p><%= post.text%></p>
                    <%end%>
                        <div class="post-footer">
                            <span>comments: <%= post.comments_counter %></span>
                            <span>likes: <%= post.likes_counter %></span>
                        </div>
                    </div>
               
                    <div class='post-div'>
                        <ul>
                            <% post.top_five.each do | comments | %>
                                <li> <%= comment.user %> : <%= comment.text  %> </li>
                            <%end%>
                        </ul>
                    </div>
            
            <%end%>
        </div>
    </div>
</section>