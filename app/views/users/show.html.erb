<section class="container">
    <div class='top-info flex'>
        <div class='img-div'>
            <img src=<%= @user.photo %>>
        </div>
        <div class='details'>
            <span class="username"><%= @user.name %></span>
            <span class="info">Number of post: <%= @user.posts_counter %></span>
        </div>
        
    </div>
    <div>
    <h2> <%= link_to 'Create new post', new_user_post_path(@user.id) %></h2>
    </div>

    <div class='bio'>
        <span> Bio </span>
        <p> <%= @user.bio %> </p>
    </div>
    <div class='post-row'> 
    <ul>
        <% @user.top_three.each  do | post |%>
        <%= link_to user_post_path(@user.id, post.id) do %>
            <li>
                <span><%= post.title %><span>
                <p> <%= post.text %> </p>
                <div class="span-footer">
                <span>comments: <%= post.comments_counter %></span>
                <span>likes: <%= post.likes_counter %></span>
                </div>
            </li>
        <%end%>
        <%end%>
    
    </ul>
       
    </div>

<div class="btn-div">
<button><%= link_to "See all post", user_posts_path(@user) %> </button>
</div>
    

</section>