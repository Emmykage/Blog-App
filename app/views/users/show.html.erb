<p>Here is the profile for User <%= @user %></p>
<section>
    <div class='top-info'>
        <div class='img-div'>
            <img src=<%= @user.photo %>>
        </div>
        <div class='details'>
            <span><%= @user.name %></span>
            <span>Number of post: <%= @user.posts_counter %></span>
        </div>
    </div>

    <div class='bio'>
        <span> Bio </span>
        <p> <%= @user.bio %> </p>
    </div>
    <div class='post-row'> 
    <ul>
        <% @user.top_three.each  do | post |%>
            <li>
                <span><%= post.title %><span>
                <p> <%= post.text %> </p>
                <span>comments: <%= post.comments_counter %></span>
                <span>likes: <%= post.likes_counter %></span>
            </li>
       <%end%>
    
    </ul>
       
    </div>

    <a> See all post </a>

</section>