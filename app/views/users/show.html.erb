<section class='card_layout'>
  <div class='user_container'>
    <div class="img-div">
      <img alt='This is an image' src='<%=@user.photo%>' class='user_image'/>
    </div>
      <div class='user-info'>
        <span><%= link_to @user.name, @user, class: 'user' %></span>
        <span class="count">Number of posts: <%= @user.posts_counter%></span>
      </div>
    </div>
    </div>
</section>
<section class='bio_container'>
  <article class='bio'>
    <p>Bio:</p>
    <p><%=@user.bio%></p>
  </article>
</section>

<% if @user.posts.empty? %>
<h4>No posts created</h4>
<% else %>
<section class='posts_container'>
<h4>Recents posts</h4>
<% @user.three_recent_post.each do |post| %>
  <article class='post_card'>
    <div>
      <%= link_to post.title, user_post_url(@user.id, post.id)%>
      <p><%= post.text%></p>
    </div>
  <div class='counters'>
    <p>Comments: <%=post.comments_counter%><br></p>
    <p>Likes: <%=post.likes_counter%><br></p>
  </div>
  </article>
  <% end %>
<% end %>
</section>

<div class='create_button_container'>
  <%= link_to 'See all posts', user_posts_url(@user.id), class: 'create_button'%>
</div>
