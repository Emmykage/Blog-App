<div class="container">
<ul class="user-list">
    <%@users.each do | user |%>
    <li class="flex">
        <div class='img-div'>
            <img src=<%= user.photo%>>
        </div>
        <div class='details'>
            <span class="username"><%= link_to user.name, user %></span>
            <span class="info">Number of post: <%= user.posts_counter %> </span>
        </div>
    </li>
    <%end%>
    </ul>
</div>